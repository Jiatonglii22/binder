<%- model_class = OrganizationStatusType -%>
<div class="page-header">
  <h1>
    <%= h @title || model_class.model_name.human.pluralize %>
  </h1>
  <%= link_to 'Create a new organization status type', new_organization_status_type_path, class: 'btn btn-primary' %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Display</th>
      <% if can?(:destroy, OrganizationStatusType) or can?(:update, OrganizationStatusType) %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @organization_status_types.each do |organization_status_type| %>
      <tr>
        <td><%= organization_status_type.name %></td>
        <td><%= organization_status_type.display ? 'Yes' : 'No' %></td>
        <% if can?(:update, organization_status_type) or can?(:destroy, organization_status_type) %>
          <td class="hidden-xs">
            <% if can?(:update, organization_status_type) %>
              <%= link_to t('.edit', default: t('helpers.links.edit')), edit_organization_status_type_path(organization_status_type), class: 'btn btn-xs btn-primary' %>
            <% end %>
            <% if can?(:destroy, organization_status_type) %>
              <%= link_to t('.destroy', default: t('helpers.links.destroy')),
                          organization_status_type_path(organization_status_type),
                          class: 'btn btn-danger btn-xs',
                          method: 'delete',
                          data: { confirm: t('.confirm', default: t('helpers.links.confirm', default: 'Are you sure?')) } %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
