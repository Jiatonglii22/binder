<%- model_class = OrganizationStatusType -%>
<div class="page-header">
  <h1>
    <%=h @title || model_class.model_name.human.pluralize %>
  </h1>
  <%= link_to 'Create a new organization status type', new_organization_status_type_path, class: 'btn btn-primary' %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <% if can?(:update, OrganizationStatusType) %>
        <th>Name (Click to edit)</th>
      <% else %>
        <th>Name</th>
      <% end %>
      <% if can?(:destroy, OrganizationStatusType) %>
        <th>Delete</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @organization_status_types.each do |organization_status_type| %>
      <tr>
        <% if can?(:update, organization_status_type) %>
          <td><%= link_to organization_status_type.name, edit_organization_status_type_path(organization_status_type) %></td>
        <% else %>
          <td><%= organization_status_type.name %></td>
        <% end %>
        <% if can?(:destroy, organization_status_type) %>
          <td>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  organization_status_type_path(organization_status_type),
                  :class => 'btn btn-danger btn-xs',
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }%>
          </td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>