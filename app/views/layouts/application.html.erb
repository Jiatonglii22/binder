<!DOCTYPE html>
<html>
<head>
  <title>SCC Trailer App</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="header">
<%= render partial: 'layouts/header' %>
</div>

<div id="flash">
  <% flash.each do |k,v| %>
    <% unless v.nil?  %>
      <section id="<%= "flash-#{k}" %>" class="<%= "flash #{k}" %>">
        <%= v %>
      </section>
    <% end %>
  <% end %>
</div>

<div id="content">
<div id="left">
<%= yield %>
</div>
<div id="right">
Put Content Here - FIXME
</div>
</div>

<div id="footer">
<%= render partial: 'layouts/footer' %>
</div>

</body>
</html>
