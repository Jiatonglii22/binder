<% if can?(:read, Organization) %>
  <%- model_class = Organization -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:name) %></th>
        <% if can?(:read, OrganizationStatus) %>
          <th><%= model_class.human_attribute_name(:organization_status) %></th>
        <% end %>
        <th><%= model_class.human_attribute_name(:organization_category) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>

    <tbody>
      <% @organizations.each do |organization| %>
        <tr>
          <td><%= link_to organization.name, organization_path(organization) %></td>
          <% if can?(:read, OrganizationStatus) %>
            <td>
              <% if can?(:read, organization.organization_statuses.displayable.last) %>
                <%= link_to organization.organization_statuses.displayable.last.organization_status_type.name, [organization, :organization_statuses] unless organization.organization_statuses.blank? %>
              <% end %>
            </td>
          <% end %>
          <td><%= organization.organization_category.name %></td>
          <td>
            <% if can?(:update, organization) %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_organization_path(organization), :class => 'btn btn-primary btn-xs' %>
            <% end %>

            <% if can?(:destroy, organization) %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      organization_path(organization),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% if can?(:create, Organization) %>
    <%= link_to t('.new', :default => t("helpers.links.new")),
            new_organization_path,
            :class => 'btn btn-primary' %>
  <% end %>
  
<% else %>
  <h3>Not Authorized!</h3>
<% end %>
