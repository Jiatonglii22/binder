<% if not organization_shift_list.empty? %>
  <%- model_class = Shift -%>
  <table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th class="hidden-xs"><%= model_class.human_attribute_name(:shift_type) %></th>
        <th><%= model_class.human_attribute_name(:starts_at) %></th>
        <th class="hidden-xs"><%= model_class.human_attribute_name(:ends_at) %></th>
        <th><%= model_class.human_attribute_name(:required_number_of_participants) %></th>
      </tr>
    </thead>
    </tbody>
      <% organization_shift_list.each do |shift| %>
        <% if can?(:read, shift) %>
          <tr>
            <td><%= link_to t('.show', :default => t("helpers.links.show")),
                          shift_path(shift), :class => 'btn btn-info btn-xs' %></td>
            <td class="hidden-xs"><%= shift.shift_type.name %></td>
            <td><%= date_and_time shift.starts_at %></td>
            <td class="hidden-xs"><%= date_and_time shift.ends_at %></td>
            <td><%= shift.required_number_of_participants %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <% if (organization_shift_list.length == 10) %>
    <%= link_to raw("View moreâ€¦"), organization_shifts_path(@organization), :class => 'btn btn-xs' %></h2>
  <% end %>
<% else %>
  No Shifts to Display.
<% end %>

