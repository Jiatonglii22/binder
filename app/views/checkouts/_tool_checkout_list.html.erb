<% if not tool_checkout_list.empty? %>
  <table>
  <tr>
    <th>Organization Or Andrewid</th>
    <th>Checked Out</th>
    <th>Checked In</th>
  </tr>

  <% tool_checkout_list.each do |checkout| %>
    <tr>
      <td>
	<% if checkout.organization %>
	  <%= link_to checkout.organization.name, checkout.organization %>
	<% elsif checkout.participant %>
          <%= link_to checkout.participant.andrewid, checkout.participant %>
  <% end %>
      </td>
      <td><%= date_and_time checkout.checked_out_at %></td>
      <td><%= date_and_time checkout.checked_in_at %></td>
      <td>
      </td>
    </tr>
  <% end %>
  </table>
<% else %>
  This Tool has never been checked out.
<% end %>
