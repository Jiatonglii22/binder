<%= simple_form_for @charge_type, html: { class: 'form-horizontal' } do |f| %>
  <%= hidden_field(nil, :from_charge, :value => params[:from_charge]) %>
  <div class="form-inputs">
    <%= f.input :name %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
              charge_types_path, :class => 'btn btn-default' %>
  </div>
<% end %>
