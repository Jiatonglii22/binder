<% if can?(:read, Charge) %>
  <%- model_class = Charge -%>
  <div class="page-header">
    <h1>
      <%= link_to @organization.name + raw("'s"), @organization unless @organization.blank? %>
      <%=t '.title', :default => model_class.model_name.human.pluralize %>
    </h1>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:description) %></th>
        <th><%= model_class.human_attribute_name(:charge_type) %></th>
        <th><%= model_class.human_attribute_name(:amount) %></th>
        <th><%= model_class.human_attribute_name(:organization) unless !@organization.blank? %></th>
        <th><%= model_class.human_attribute_name(:charged_at) %></th>
        <th><%= model_class.human_attribute_name(:is_approved) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @charges.each do |charge| %>
        <% if can?(:read, charge) %>
          <tr>
            <td><%= link_to charge.description, charge %></td>
            <td><%= charge.charge_type.name %></td>
            <td><%= number_to_currency charge.amount %></td>
            <td><%= link_to charge.organization.name, charge.organization unless !@organization.blank? %></td>
            <td><%= date_and_time(charge.charged_at) %></td>
            <td><%= format_boolean charge.is_approved %></td>
            <td>
              <% if can?(:update, charge) %>
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_charge_path(charge), :class => 'btn btn-xs' %>
              <% end %>
              <% if can?(:update, charge) %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      charge_path(charge),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <span class="smtext">
    <%= will_paginate @charges, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
  </span>

  <% if can?(:create, Charge) and @organization.blank? %>
    <%= link_to t('.new', :default => t("helpers.links.new")),
            new_charge_path,
            :class => 'btn btn-primary' %>
  <% end %>
<% else %>
  <h3>Not Authorized!</h3>
<% end %>
