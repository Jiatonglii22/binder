<% if can?(:update, @organization_status) %>
	<%= simple_form_for [@organization, @organization_status], :html => { :class => 'form-horizontal' } do |f| %>
	  <%= f.input :organization_id, :as => :hidden %>
	  <%= f.association :organization_status_type %>
    <%= f.input :description, :as => :text %>
	  <div class="form-actions">
	    <%= f.button :submit, :class => 'btn-primary' %>
	    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
	                @organization, :class => 'btn' %>
	  </div>
	<% end %>

<% else %>
  <h3>Not Authorized!</h3>
<% end %>

