<% if can?(:read, Participant) %>
  <%- model_class = Participant -%>
  <div class="page-header">
    <h1>
    <% if @organization.blank? %>
      <%=t '.title', :default => model_class.model_name.human.pluralize %>
    <% else %>
      <%= link_to @organization.name + "'s", @organization %> Members
    <% end %>
    </h1>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th><%= model_class.human_attribute_name(:andrewid) %></th>
        <% if can?(:read_phone_number, Participant) %>
          <th><%= model_class.human_attribute_name(:phone_number) %></th>
        <% end %>
        <th><%= "Waiver?" %></th>
        <th><%= "Hard Hat Waiver?" %></th>
        
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @participants.each do |participant| %>
        <% if can?(:read, participant) %>
          <tr>
            <td><%= link_to participant.name, participant %></td>
            <td><%= link_to participant.andrewid, participant %></td>
            <% if can?(:read_phone_number, Participant) %>
              <td><%= participant.formatted_phone_number unless !can?(:read_phone_number, participant) %></td>
            <% end %>
            <td><%= format_boolean(participant.has_signed_waiver?) %></td>
            <td><%= format_boolean(participant.has_signed_hardhat_waiver?) %></td>
            
            <td>
              <% if can?(:update, participant) %>
                <%= link_to t('.edit', :default => t("helpers.links.edit")),
                            edit_participant_path(participant), :class => 'btn btn-primary btn-xs' %>
              <% end %>
              <% if can?(:destroy, participant) %>
                <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                            participant_path(participant),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                            :class => 'btn btn-xs btn-danger' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  
  <%= will_paginate @participants, renderer: BootstrapPagination::Rails %>
  
<% else %>
  <h3>Not Authorized!</h3>
<% end %>

